{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/checkout/store-form-data",
      "dest": "/api/store-form-data.js"
    },
    {
      "src": "/api/checkout/direct",
      "dest": "/api/checkout-direct.js"
    },
    {
      "src": "/api/checkout/redirect",
      "dest": "/api/checkout-redirect.js"
    },
    {
      "src": "/api/checkout/success",
      "dest": "/api/process-payment-success.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "VITE_STRIPE_PUBLIC_KEY": "@vite_stripe_public_key",
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key"
  }
}